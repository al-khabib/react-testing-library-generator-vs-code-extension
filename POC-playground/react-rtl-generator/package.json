{
  "name": "react-rtl-generator",
  "displayName": "react-rtl-generator",
  "description": "Vs COde Extension to auto generate RTL tests using AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateReactTests",
        "title": "Generate tests for React component",
        "category": "React Test Generator"
      },
      {
        "command": "extension.openTestGenPanel",
        "title": "Open React Test Generator Panel",
        "category": "React Test Generator"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.generateReactTests",
          "when": "resourceLangId == typescriptreact",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "extension.generateReactTests",
          "when": "resourceLangId == typescriptreact",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
