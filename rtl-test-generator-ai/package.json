{
  "name": "rtl-test-generator-ai",
  "displayName": "ai-rtl-test-generator",
  "description": "generate RTL unit tests for react components using LLM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "testgen.generateForFile",
        "title": "TestGen: Generate RTL Tests for Current File",
        "category": "TestGen"
      },
      {
        "command": "testgen.generateForFolder",
        "title": "TestGen: Batch Generate Tests for Folder",
        "category": "TestGen"
      },
      {
        "command": "testgen.fixSelectorsInFile",
        "title": "TestGen: Fix RTL Selectors in Current File",
        "category": "TestGen"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TestGen Settings",
      "properties": {
        "testgen.gatewayUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "FastAPI gateway base URL"
        },
        "testgen.model": {
          "type": "string",
          "default": "deepseek-coder-v2-lite-instruct",
          "description": "Model name at the local OpenAI-compatible endpoint"
        },
        "testgen.outputDir": {
          "type": "string",
          "default": "__tests__",
          "description": "Directory for generated test files (relative to component)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
